<?xml version="1.0" encoding="UTF-8"?>
<program>
	<llmcall output_var="tunes_list"
			 output_format="list"
			 separator="\n"
			 prompt="Выдай список из 20 потрясающих джазовых композиций в стиле smooth jazz. Формат выхода: только список разделенный символом переноса строки."/>

<!--  <llmcall output_var="tunes_list"
			 output_format="list"
			 separator="\n"
			 prompt=" Выдай список из 20 потрясающих музыкальных композиций, каждый раз новый и уникальный. Сделай его максимально разнообразным по жанрам, эпохам и культурам: джаз, рок, блюз, классика, электроника, хип-хоп, фолк, этническая музыка, авангард, латино и другие.Не используй повторяющиеся названия из предыдущих списков. Формат ответа: только список, по одной композиции на строку, в виде: ://../?_=++++%2%80%94++Исполнитель — Название. "/>
 -->
	<func name="SearchYoutube">
	  <click button="left" x="200" y="10" />
	  <wait ms="150"/>
	  <hotkey hotkey="ctrl+l"/>
	  <wait ms="150"/>
	  <type mode="type" text="https://www.youtube.com/results?search_query=${arg0|url}"/>
	  <wait ms="150"/>
	  <hotkey hotkey="enter"/>
	  <wait ms="1500"/>
	  
	  <!-- Случайный скролл вниз 3..7 раз -->
		<repeat times="randint(3,7)">
		  <hotkey hotkey="pgdn"/>
		  <wait ms="300"/>   <!-- дай странице дорисоваться -->
		</repeat>
		
		<wait ms="1000"/> 
		<!-- Клик в центре экрана в случайной области 400x300 -->
		<set CX="SCREEN_W // 2"/>
		<set CY="SCREEN_H // 2"/>
		<set X1="CX - 200"/>
		<set Y1="CY - 150"/>
		<set X2="CX + 200"/>
		<set Y2="CY + 150"/>
		<click area="${X1},${Y1},${X2},${Y2}" button="left"/>
		<click area="${X1},${Y1},${X2},${Y2}" button="left"/>


	  <wait ms="10000"/>

	</func>

	<foreach list="tunes_list" random_shuffle="true" do="SearchYoutube"/>
</program>
