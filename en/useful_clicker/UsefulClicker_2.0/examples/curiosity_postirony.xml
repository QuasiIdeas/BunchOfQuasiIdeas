<?xml version="1.0" encoding="UTF-8"?>
<program>
<call name="Main"/>
<func name="Main">
<llmcall
  output_var="postironic_lines"
  output_format="list"
  separator="\n"
  prompt="You are a query generator for a clicker that searches YouTube and the web. 

Goal: produce exactly 20 concise search queries (3–7 words each) that will find post-ironic content, memes, and videos from the last 90 days.

Language: English.
Mix styles: memes, TikTok, weirdcore, metamodern, absurd humor.
Focus keywords: post-irony, meta-humor, surreal memes.
Each query 2–4 words, one per line.

Return exactly 20 lines."
/>


	<func name="SearchYoutube">
	  <click button="left" x="200" y="10" />
	  <wait ms="150"/>
	  <hotkey hotkey="ctrl+l"/>
	  <wait ms="150"/>
	  <type mode="type" text="https://www.youtube.com/results?search_query=${arg0|url}"/>
	  <wait ms="150"/>
	  <hotkey hotkey="enter"/>
	  <wait ms="1500"/>
	  
	  <!-- Случайный скролл вниз 3..7 раз -->
		<repeat times="randint(3,7)">
		  <hotkey hotkey="pgdn"/>
		  <wait ms="300"/>   <!-- дай странице дорисоваться -->
		</repeat>
		
		<wait ms="1000"/> 
		<!-- Клик в центре экрана в случайной области 400x300 -->
		<set CX="SCREEN_W // 2"/>
		<set CY="SCREEN_H // 2"/>
		<set X1="CX - 200"/>
		<set Y1="CY - 150"/>
		<set X2="CX + 200"/>
		<set Y2="CY + 150"/>
		<click area="${X1},${Y1},${X2},${Y2}" button="left"/>
		<click area="${X1},${Y1},${X2},${Y2}" button="left"/>


	  <wait ms="60000"/>

	</func>

	<foreach list="postironic_lines" random_shuffle="true" do="SearchYoutube"/>
</func>
</program>

